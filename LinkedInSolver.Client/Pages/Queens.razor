@page "/queens"
@using LinkedInSolver.Client.Models
@using LinkedInSolver.Client.Components

<PuzzleGrid
    CurrentPuzzle="puzzle"
    CurrentGrid="grid"
    GetCellClassesForDiv="getCellClasses"
    GetCellContent="getCellContent" />

@code {
    private static readonly Puzzle puzzle = Puzzle.GetPuzzle("Queens");
    
    [Inject] private NavigationManager Navigation { get; set; } = default!;
    private QueensGrid grid = new(Grid.DEFAULT_SIZE);

    private List<string> getCellClasses(Pos pos) =>
        grid.GetIsActive(pos) ? new() { "active" } : new();

    private RenderFragment? getCellContent(Pos pos) => null;
}
